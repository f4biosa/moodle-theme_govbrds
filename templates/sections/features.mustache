{{!
    Frontpage section.
}}
{{#display_features}}
<div style="background-color: #8AABC3">
    <div class="container-lg" >
        <div class="row" >
        <h3 class="mt-3">{{{featuresheading}}}</h3>
        <div class="row">
            {{#features}}
            <div class="col-sm d-flex">
                <div class="br-card">
                    <div class="card-content">
                        <h1><i class="fas {{{icon}}}" style="font-size:larger"></i></h1>
                        <h6>{{{heading}}}</h6>
                        {{{content}}}
                        {{#btntext}}
                            <div class="d-flex mt-3">
                                <div>
                                    <a class="br-button primary mr-3 small" href="{{{config.wwwroot}}}{{{btnurl}}}" type="button">{{{btntext}}}</a>
                                </div>
                            </div>
                        {{/btntext}}
                    </div>
                </div>
            </div>
            {{/features}}
        </div>
        </div>
    </div>
</div>
{{/display_features}}

{{#haschildren}}
<div class="col-2">
    <a class="br-item header" href="javascript:void(0)" {{#title}}title="{{.}}"{{/title}}>
        <div class="content text-down-01 text-bold text-uppercase">{{{text}}}</div>
        <div class="support"><i class="fas fa-angle-down" aria-hidden="true"></i></div>
    </a>
    <div class="br-list"><span class="br-divider d-md-none"></span>
        {{#children}}
            <a  class="br-item" {{#title}}title="{{.}}"{{/title}} href="{{{url}}}{{{action}}}">
            <div class="content">{{{text}}}</div></a>
        {{/children}}
    </div>
</div>
{{/haschildren}}
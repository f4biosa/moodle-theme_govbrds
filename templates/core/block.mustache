{{! Block Skip Link }}
{{#showskiplink}}
  <a href="#sb-{{skipid}}" class="sr-only sr-only-focusable">{{#str}}skipa, access, {{title}}{{/str}}</a>
{{/showskiplink}}

{{! Start Block Container }}
<section id="{{id}}"
     class="{{#hidden}}hidden{{/hidden}} block block_{{type}} {{#hascontrols}}block_with_controls{{/hascontrols}} card mb-3"
     role="{{ariarole}}"
     data-block="{{type}}"
     {{#arialabel}}
        aria-label={{#quote}}{{{arialabel}}}{{/quote}}
     {{/arialabel}}
     {{^arialabel}}
        {{#title}}
          aria-labelledby="instance-{{blockinstanceid}}-header"
        {{/title}}
     {{/arialabel}}>

    {{! Block contents }}
    <div class="card-block card-body">

        {{! Block header }}
        <div class="outstanding-header ">
            {{#title}}
            <h5 id="instance-{{blockinstanceid}}-header" class="card-title d-inline outstanding-title">{{{title}}}</h5>
            {{/title}}
            {{#hascontrols}}
                <div class="block-controls pull-right header">
                    {{{controls}}}
                </div>
            {{/hascontrols}}
        </div>
        <div class="card-text content nt-3">
            {{{content}}}
            <div class="footer">{{{footer}}}</div>
            {{{annotation}}}
        </div>
    </div>

{{! End Block Container }}
</section>

{{! Block Skip Link Target }}
{{#showskiplink}}
  <span id="sb-{{skipid}}"></span>
{{/showskiplink}}


